<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent" >

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="选择游记模板"
            android:textColor="#666666" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

         

            <ImageView
                android:id="@+id/yellow"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:src="@drawable/yellow"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"/>


            <ImageView
                android:id="@+id/pink"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/yellow"
                android:src="@drawable/pink"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"/>

          
            <ImageView
                android:id="@+id/blue"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/yellow"
                android:src="@drawable/blue"
                android:layout_marginLeft="20dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"  />

 

            <ImageView
                android:id="@+id/green"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/pink"
                android:layout_toRightOf="@id/blue"
                android:src="@drawable/green"
                android:layout_marginLeft="40dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp" />
            <ImageView
                android:id="@+id/orange"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/blue"
                android:src="@drawable/vintageex"
                android:layout_marginLeft="20dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"  />
             <ImageView
                android:id="@+id/sail"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/green"
                android:layout_toRightOf="@id/orange"
                android:src="@drawable/sailex"
                android:layout_marginLeft="40dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp" />
               <ImageView
                android:id="@+id/bluee"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/orange"
                android:src="@drawable/blueex"
                android:layout_marginLeft="20dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"  />
             <ImageView
                android:id="@+id/tree"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@id/sail"
                android:layout_toRightOf="@id/bluee"
                android:src="@drawable/greenex"
                android:layout_marginLeft="40dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp" />
            <View 
                android:layout_below="@id/tree"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        </RelativeLayout>
        <View 
            android:layout_height="10dp"
            android:layout_width="match_parent"
            />
    </LinearLayout>

</RelativeLayout>