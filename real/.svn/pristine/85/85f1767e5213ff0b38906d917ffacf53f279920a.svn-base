<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/share"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:id="@+id/tencent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:orientation="vertical"
        >
        <ImageView
        android:id="@+id/tencentimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/umeng_socialize_tx_on" />
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="20dp"
	    android:id="@+id/tencentword"
	    android:layout_gravity="center_horizontal"
	    android:text="腾讯微博"
	    android:singleLine="true"
	    android:textSize="11sp"
	    android:gravity="center"/>
    </LinearLayout>
 
    
    <LinearLayout 
        android:id="@+id/qq"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:orientation="vertical"
        >
        <ImageView
        android:id="@+id/qqimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/umeng_socialize_qq_on" />
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="20dp"
	    android:id="@+id/qqword"
	    android:layout_gravity="center_horizontal"
	    android:text="QQ"
	    android:singleLine="true"
	    android:textSize="11sp"
	    android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:orientation="vertical"
        >
        <ImageView
        android:id="@+id/spaceimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/umeng_socialize_qzone_on" />
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="20dp"
	    android:id="@+id/spaceword"
	   android:layout_gravity="center_horizontal"
	
	    android:layout_marginLeft="2dp"
	    android:layout_marginRight="2dp"
	    android:text="QQ空间"
	    android:singleLine="true"
	    android:textSize="11sp"
	    android:gravity="center"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/sina"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="80dp"
        android:orientation="vertical"
        >
        <ImageView
        android:id="@+id/sinaimg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
       android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/umeng_socialize_sina_on" />
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="20dp"
	    android:id="@+id/sinaword"
	    android:layout_marginBottom="4dp"
	   android:layout_gravity="center_horizontal"
	    android:layout_marginLeft="2dp"
	    android:layout_marginRight="2dp"
	    android:text="新浪微博"
	    android:singleLine="true"
	    android:textSize="11sp"
	    android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
