<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="200dp" >

            <ImageView
                android:id="@+id/portrait"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bac" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:shadowColor="#ff000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="5"
                android:text="wew"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/serve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:shadowColor="#ff000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:text="wew"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/div1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/rl1"
            android:layout_centerHorizontal="true"
            android:background="#4fbfbfbf" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/div1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_wechat" />

            <TextView
                android:id="@+id/weixin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="fuwu2222"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/div2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll1"
            android:layout_centerHorizontal="true"
            android:background="#4fbfbfbf" />

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/div2"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_vip_hotline" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="fuwu2222"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/div3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll2"
            android:layout_centerHorizontal="true"
            android:background="#4fbfbfbf" />

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/div3"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="自我介绍"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="fuwu2222"
                android:textColor="#af000000"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/div4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/ll3"
            android:layout_centerHorizontal="true"
            android:background="#4fbfbfbf" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Blush" >

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/cross" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/consult_icon" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/close"
            android:layout_toRightOf="@id/img"
            android:text="TA即将成为带领你遨游世界的专属旅行顾问，一旦确定就不可更改，是否确定？"
            android:textColor="#666666" />

        <Button
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img"
            android:background="@drawable/health_infopop_button_full"
            android:text="确定"
               android:textSize="12sp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/yes"
            android:background="@drawable/health_infopop_button_empty"
            android:text="让我想想"
            android:textSize="12sp"
            android:textColor="#666666" />
    </RelativeLayout>

</RelativeLayout>