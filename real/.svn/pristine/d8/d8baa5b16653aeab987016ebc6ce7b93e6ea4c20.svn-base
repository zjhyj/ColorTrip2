<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Blush">
        <ImageView 
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/cross"/>
          <ImageView 
              android:id="@+id/img"
            android:layout_width="70dp"
            android:layout_height="70dp"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
           android:layout_margin="10dp"
            android:src="@drawable/consult_icon"/>
          <TextView 
              android:id="@+id/content"
              android:layout_toRightOf="@id/img"
              android:layout_toLeftOf="@id/close"
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#666666"
              android:text="TA即将成为带领你遨游世界的专属旅行顾问，一旦确定就不可更改，是否确定？"/>
          <Button 
              android:id="@+id/yes"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/content"
              android:layout_toRightOf="@id/img"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/health_infopop_button_full"
              android:textColor="@color/white"
              android:text="确定"/>
          <Button 
              android:id="@+id/no"
              android:layout_toRightOf="@id/yes"
              android:layout_below="@id/content"
              android:layout_marginLeft="20dp"
               android:textColor="#666666"
               android:layout_marginTop="5dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/health_infopop_button_empty"
              android:text="让我想想"/>
    </RelativeLayout>

</RelativeLayout>