<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<TextView
        android:id="@+id/txt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="选择游记模板"/>
    
    <RadioGroup 
        android:id="@+id/theme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView 
            android:id="@+id/yellow2"
            android:src="@drawable/yellow"
            android:layout_toRightOf="@id/yellow"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <RadioButton
            android:id="@+id/pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/yellow2"/>
 <ImageView 
            android:id="@+id/pink2"
            android:src="@drawable/pink"
            android:layout_toRightOf="@id/pink"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <RadioButton
            android:id="@+id/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yellow2"/>
<ImageView 
            android:id="@+id/blue2"
            android:src="@drawable/blue"
            android:layout_toRightOf="@id/blue"
            android:layout_below="@id/yellow2"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        <RadioButton
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pink2"
            android:layout_toRightOf="@id/blue2"/>
<ImageView 
            android:id="@+id/green2"
            android:src="@drawable/green"
            android:layout_toRightOf="@id/green"
            android:layout_below="@id/pink2"
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="50dp"/>
        </RelativeLayout>
    </RadioGroup>
    
</LinearLayout>
